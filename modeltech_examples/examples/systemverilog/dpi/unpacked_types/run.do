onerror {resume}
# Create the library.
if [file exists work] {
    vdel -all
}
vlib work

# Compile the HDL source(s).
vlog -sv -dpiheader dpi_array_xor.h dpi_array_xor.v dpi_array_xor.c

# Simulate the design.
onerror {quit -sim}
vsim -c top
run -all
quit -f
